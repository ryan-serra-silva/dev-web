					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"var htmlResponse = pm.response.text();",
							"var saldo =  htmlResponse.match(/Saldo disponível:\\s*R\\$\\s*([\\d.]+)/)[1];",
							"pm.environment.set(\"saldoAnterior\", saldo);",
							"console.log(\"Saldo anterior salvo:\", saldo);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
