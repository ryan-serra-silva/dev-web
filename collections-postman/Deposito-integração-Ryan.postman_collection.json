		},
		{
			"name": "Depositar",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"saldo atual - saldo anterior == valor depositado\", function () {",
							"    var htmlData = pm.response.text();",
							"    var saldoAtual = parseFloat(htmlData.match(/Saldo atual: R\\$ (\\d+\\.\\d{2})/)[1]);",
							"    console.log(\"teste saldo atual\",saldoAtual);",
							"    var saldoAnterior = parseFloat(pm.environment.get(\"saldoAnterior\"));",
							"    console.log(\"teste saldo anterior\",saldoAnterior);",
							"    var valorDepositado = parseFloat(pm.request.url.query.get(\"valor\"));",
							"    ",
							"    pm.expect(saldoAtual - saldoAnterior).to.equal(valorDepositado);",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
